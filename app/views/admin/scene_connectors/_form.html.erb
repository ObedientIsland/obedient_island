      <h2><%= pluralize(@scene_connector.errors.count, "error") %> prohibited this scene_connector from being saved:</h2>

      <ul>
      <% @scene_connector.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :position_x %>
    <%= f.number_field :position_x, within: 1...1025 %>
  </div>
  <div class="field">
    <%= f.label :position_y %>
    <%= f.number_field :position_y, within: 1...769 %>
  </div>
  <div class="field">
    <%= f.label :scene_from %>
    <%= f.select :scene_from_id, options_for_select(@scenes.map{ |s| [s.name, s.id] }) %>
  </div>
  <div class="field">
    <%= f.label :scene_to %>
    <%= f.select :scene_to_id, options_for_select(@scenes.map{ |s| [s.name, s.id] }) %>
  </div>

  <div class="actions">
    <%= link_to_function('Back', 'history.back()', class: :form_back_link) %> |
    <%= f.submit %>
  </div>
<% end %>
