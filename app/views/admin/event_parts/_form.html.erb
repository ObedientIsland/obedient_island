<%= form_for(@event_part) do |f| %>
  <% if @event_part.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event_part.errors.count, "error") %> prohibited this event_part from being saved:</h2>

      <ul>
      <% @event_part.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :text %>
    <%= f.text_area :text %>
  </div>
  <div class="field">
    <%= f.label :next_type %>
    <%= f.text_field :next_type %>
  </div>
  <div class="field">
    <%= f.label :next_id %>
    <%= f.text_field :next_id %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :event_id %>
    <%= f.select :event_id, options_for_select(@events.map{ |s| [s.name, s.id] }) %>
  </div>

  <div class="actions">
    <%= link_to_function('Back', 'history.back()', class: :form_back_link) %> |
    <%= f.submit %>
  </div>
<% end %>
