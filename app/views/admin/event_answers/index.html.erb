<p id="notice"><%= notice %></p>

<h1>Listing Event Answers</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Answer</th>
      <th>Next type</th>
      <th>Next</th>
      <th>EventPartId</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_answers.each do |event_answer| %>
      <tr>
        <td><%= event_answer.id %></td>
        <td><%= event_answer.name %></td>
        <td><%= event_answer.answer %></td>
        <td><%= event_answer.next_type %></td>
        <td><%= event_answer.next_id %></td>
        <td><%= event_answer.event_part_id %></td>
        <td><%= link_to 'Show', event_answer %></td>
        <td><%= link_to 'Edit', edit_event_answer_path(event_answer) %></td>
        <td><%= link_to 'Destroy', event_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

