<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :active %>
    <%= f.check_box :active %>
  </div>
  <div class="field">
    <%= f.label :possibility %>
    <%= f.number_field :possibility, within: 1...101 %>
  </div>
  <div class="field">
    <%= f.label :scene %>
    <%= f.select :scene_id, options_for_select(@scenes.map{ |s| [s.name, s.id] }) %>
  </div>

  <div class="actions">
    <%= link_to_function('Back', 'history.back()', class: :form_back_link) %> |
    <%= f.submit %>
  </div>
<% end %>
